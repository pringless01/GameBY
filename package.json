{
  "name": "gameby-root",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "apps/api/src",
    "packages/*"
  ],
  "scripts": {
    "codex:run": "node tools/codex-runner.js",
    "dev:web": "npm --workspace @gameby/web run dev",
    "lint": "eslint . --ext .js,.ts --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "test": "npm -ws run test",
    "smoke:local": "node apps/api/src/scripts/smoke.js",
    "dc:up": "docker compose up -d",
    "dc:down": "docker compose down -v --remove-orphans",
    "coverage": "npm --prefix apps/api/src run coverage",
    "ci:all": "npm --prefix apps/api/src test"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "fast-glob": "^3.3.3"
  }
}
