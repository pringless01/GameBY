{
  "all": true,
  "reporter": ["text-summary", "lcov"],
  "extension": [".js"],
  "include": [
    "routes/**/*.js",
    "services/**/*.js",
    "middleware/**/*.js",
    "security/**/*.js",
    "metrics/**/*.js",
    "utils/**/*.js"
  ],
  "exclude": [
    "server.js",
    "tests/**",
    "scripts/**",
    "migrations/**",
    "sockets/**",
    "data/**"
  ]
}
