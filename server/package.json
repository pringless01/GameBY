    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "node --eval \"process.exit(0)\""
    ]
